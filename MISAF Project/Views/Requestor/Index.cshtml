@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">

    <!-- Pre-loader HTML -->
    <div id="loading" style="display: none;">
        <div class="loader"></div>
        <p>Loading...</p>
    </div>


    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/"><i class="uil-home-alt"></i>&nbsp;Home</a></li>
                        <li class="breadcrumb-item active">Requestor Management</li>
                    </ol>
                </div>
                <h4 class="page-title">Requestor</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <!-- Start Content-->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-primary" id="addMisaf">
                            <i class="mdi mdi-plus me-1"></i> Add MISAF
                        </button>
                    </div>

                    <div class="table-responsive-sm">
                        <!--<table id="misafTable" class="table table-bordered table-centered mb-0">
                        <thead>
                            <tr>
                                <th>MAF No</th>
                                <th>Requested By</th>
                                <th>Requested For</th>
                                <th>Status</th>
                                <th>Status Date</th>
                                <th>Status Upadated By</th>
                                <th>Status Remarks</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody id="misafTableBody">-->
                        <!-- Filled via AJAX -->
                        <!--</tbody>
                        </table>-->
                    </div>

                    <div class="table-responsive-sm mt-2">
                        @Html.Partial("_MainTable_Partial", (string) ViewBag.Type)
                    </div>
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>
    </div>
    <!-- end row -->
    <!-- End Content-->

</div>


<!-- Request Modal -->
<div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" style="z-index: 1050;">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="requestModalLabel">Add Request</h5>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" name="editIndex" value="-1" />
                <div class="form-group mb-2">
                    <label for="category">Category <span class="text-danger">(Required)</span></label>
                    <select class="form-control select2" id="category"></select>
                </div>
                <div class="form-group mb-2">
                    <textarea class="form-control" placeholder="Request / Problem Recommendation (Required)" id="requestProblemRecommendation"></textarea>
                </div>
                <div class="form-group mb-2">
                    <label for="reason">Reason <span class="text-danger">(Required)</span></label>
                    <select class="form-control select2" id="reason"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveRequest" type="button" class="btn btn-success">Add</button>
                <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Remarks Modal -->
<div class="modal fade" id="remarksModal" tabindex="-1" role="dialog" aria-labelledby="remarksModalLabel" style="z-index: 1050;">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <label for="remarks" class="form-label">Remarks</label>
                <textarea id="remarks" class="form-control" cols="10"></textarea>
                <input type="hidden" id="remarksIndex" />
                <input type="hidden" id="remarksMAFNo" />
                <input type="hidden" id="remarksStatus" />
            </div>
            <div class="modal-footer">
                <button id="btnSaveRemarksEndorse" type="button" class="btn btn-success">Save</button>
                <button id="btnSaveRemarksReject" type="button" class="btn btn-success">Save</button>
                <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Requestor Modal -->
<div class="modal fade" id="requestorModal" tabindex="-1" role="dialog" style="z-index: 1040;">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="requestorModalLabel">Create Request</h5>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="container">

                    <!--  Requestor  -->
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <h4><i class="mdi mdi-account"></i> Requestor</h4>
                            <hr />
                            <div class="row mb-2">
                                <div class="col-md-4 col-sm-6 mb-2" id="editMafNo">
                                    <label for="MAF_No">MAF No</label>
                                    <input type="text" id="MAF_No" class="form-control" disabled />
                                </div>
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <label for="Date_Requested">Date Requested</label>
                                    <input type="date" id="Date_Requested" class="form-control" disabled />
                                </div>
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <label for="Requested_By">Requested By</label>
                                    <input type="text" id="Requested_By" class="form-control" disabled />
                                </div>
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <label for="Requested_For">Requested For <span class="text-info">(Optional)</span></label>
                                    <input type="text" id="Requested_For" class="form-control" disabled placeholder="Search employee..." />
                                    <select id="selectRequestedFor" class="select2 form-control"></select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-lg col-sm-12 col-xl-6">
                        <div class="card-body">
                            <h4><i class="mdi mdi-calendar-range"></i> Target Date</h4>
                            <hr />
                            <label for="MAF_Target_Date">Target Date <span class="text-info">(Optional)</span></label>
                            <input type="date" id="MAF_Target_Date" class="form-control" />
                        </div>
                    </div>

                    <!--  Request Details  -->
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="card-title"><i class="mdi mdi-form-select"></i> Request Details</h4>
                                <div>
                                    <button type="button" class="btn btn-md btn-primary" id="addRequest">
                                        <i class="mdi mdi-plus me-1"></i> Add
                                    </button>
                                </div>
                            </div>
                            <hr />
                            <div class="row mb-3" style="overflow-x:auto;">
                                <!-- Request Table -->
                                <table class="table table-bordered table-centered" id="requestTable">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th>Request / Problem Recommendation</th>
                                            <th>Reasons</th>
                                            <th>Status</th>
                                            <th>Status Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="requestTableBody">
                                        <!-- Populated dynamically -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!--  Endorser & Approver  -->
                    <div class="row mb-2">
                        <div class="col-sm-12 col-xl-6">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <h4 class="card-title"><i class="mdi mdi-account"></i> Endorser</h4>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 mb-2">
                                            <label for="Endorsed_By">Endorsed / Noted By <span class="text-info">(Optional)</span></label>
                                            <select id="selectEndorser" class="form-control select2">
                                                <option value="value">text</option>
                                            </select>
                                        </div>

                                        <div class="col-md-12 col-sm-12 mb-2" id="frm_DateTime_Endorsed">
                                            <label for="DateTime_Endorsed">Status Date (Endorsed / Noted By)</label>
                                            <input type="date" class="form-control" id="DateTime_Endorsed" />
                                        </div>


                                        <div class="col-md-12 col-sm-12 mb-2" id="frm_Endorser_Remarks">
                                            <label for="Endorser_Remarks">Remarks (Endorsed / Noted By)</label>
                                            <textarea class="form-control" placeholder="Remarks" id="Endorser_Remarks"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-xl-6">

                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="row">
                                        <h4 class="card-title"><i class="mdi mdi-account"></i> Approver</h4>
                                        <hr />
                                        <div class="col-md-12 col-sm-12 mb-2">
                                            <label for="Final_Approver">Final Approver <span class="text-danger">(Required)</span></label>
                                            <select id="selectFinalApprover" class="form-control select2">
                                                <option value="value">text</option>
                                            </select>
                                        </div>

                                        <div class="col-md-12 col-sm-12 mb-2" id="frm_DateTime_Approved">
                                            <label for="DateTime_Approved">Status Date (Final Approver)</label>
                                            <input type="date" class="form-control" id="DateTime_Approved" />
                                        </div>


                                        <div class="col-md-12 col-sm-12 mb-2" id="frm_Final_Approver_Remarks">
                                            <label for="Final_Approver_Remarks">Remarks (Final Approver)</label>
                                            <textarea class="form-control" placeholder="Remarks" id="Final_Approver_Remarks"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--  Status  -->
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <h4 class="card-title"><i class="mdi mdi-clock"></i> Status</h4>
                            <hr />
                            <div class="row mb-2">
                                <div class="col-md-6 col-sm-6 mb-2">
                                    <label for="Status">Status</label>
                                    <input type="text" id="Status" class="form-control" disabled />
                                </div>

                                <div class="col-md-6 col-sm-6 mb-2" id="frm_Status_DateTime">
                                    <label for="Status_DateTime">Status Date</label>
                                    <input type="date" id="Status_DateTime" class="form-control" disabled />
                                </div>

                                <div class="col-md-4 col-sm-6 mt-3">
                                    <div class="row">
                                        <div class="col-7">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="preApproved" disabled>
                                                <label class="form-check-label" for="preApproved">
                                                    Pre-Approved ?
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--  Attachment  -->
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="card-title"><i class="mdi mdi-attachment"></i> Attachment</h4>
                                <div>
                                    <button type="button" class="btn btn-md btn-primary" id="addAttachment">
                                        <i class="mdi mdi-plus me-1"></i> Add
                                    </button>
                                </div>
                            </div>
                            <hr />
                            <div class="row mb-2" style="overflow-x:auto;">
                                <!-- Attachment Table -->
                                <table class="table table-bordered table-centered" id="attachmentTable">
                                    <thead>
                                        <tr>
                                            <th>Filename</th>
                                            <th>File</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="attachmentTableBody">
                                        <!-- Populated dynamically -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <input type="hidden" id="editIndex" value="-1" />
            </div>
            <div class="modal-footer">
                <button id="btnSaveMisaf" type="button" class="btn btn-success">Save MISAF</button>
                <button id="btnUpdateMisaf" type="button" class="btn btn-success">Update MISAF</button>
                <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Attachment Modal -->
<div class="modal fade" id="attachmentModal" tabindex="-1" role="dialog" style="z-index: 1050;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="attachmentModalLabel"></h5>
            </div>
            <div class="modal-body">
                <div id="attachmentPreview"></div>
                <form id="uploadForm" enctype="multipart/form-data">
                    <div class="form-group mb-2">
                        <input type="file" id="attachment" name="file" class="form-control" />
                        <input type="hidden" id="editIndex" value="-1" />
                    </div>
                </form>
                <button type="button" id="btnSaveAttachment" class="btn btn-primary btn-md mx-auto">Upload</button>
            </div>
        </div>
    </div>
</div>

<!-- ImagePreview Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true" style="z-index: 1050;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
                <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" class="img-fluid" alt="Attachment Preview">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Error -->
<div class="modal fade" id="validationModal" tabindex="-1" role="dialog" aria-labelledby="validationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="validationModalLabel">Validation Errors</h5>
                <button type="button" class="btn btn-secondary text-white" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-danger" id="validationErrors">
                @Html.AntiForgeryToken()
                <!-- Errors will be inserted here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="sendEmailButton">Send to MIS</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <style>
        /* Toastr */
        #toast-container > .toast {
            z-index: 10000 !important; /* Above pre-loader */
        }

        /* Modal backdrops */
        .modal-backdrop {
            z-index: 1030 !important; /* Below approverModal */
        }

        /* Ensure remarksModal backdrop is above approverModal */
        #remarksModal + .modal-backdrop {
            z-index: 1045 !important; /* Below remarksModal, above approverModal */
        }

        /* Ensure imageModal backdrop is above approverModal */
        #imageModal + .modal-backdrop {
            z-index: 1045 !important; /* Below imageModal, above approverModal */
        }

        /* Modal content styling */
        .modal-content {
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .custom-toastr {
            position: fixed !important;
            top: 50% !important;
            left: 50% !important;
            transform: translate(-50%, -50%) !important;
        }
    </style>
    <link href="~/Content/pre-loader.css" rel="stylesheet" />
}

@section scripts{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/requestor.js?nocache=@DateTime.Now.Ticks"></script>
}







