@model IEnumerable<MISAF_Project.ViewModels.TestClass>


@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/"><i class="uil-home-alt"></i>&nbsp;Home</a></li>
                        <li class="breadcrumb-item active">MISAF - List</li>
                    </ol>
                </div>
                <h4 class="page-title">MISAF Action Form</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <!-- Start Content-->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-sm-5">
                            <a class="btn btn-danger mb-2" href="/MISAF/Create"><i class="mdi mdi-plus-circle me-2"></i> Add MISAF</a>
                        </div>
                        <div class="col-sm-7">
                            @*<div class="text-sm-end">
                                    <button type="button" class="btn btn-success mb-2 me-1"><i class="mdi mdi-cog-outline"></i></button>
                                    <button type="button" class="btn btn-light mb-2 me-1">Import</button>
                                    <button type="button" class="btn btn-light mb-2">Export</button>
                                </div>*@
                        </div>
                    </div>

                    <div class="table-responsive-sm mt-2">
                        <table id="misafTable" class="table table-striped table-centered  mb-0">
                            <thead>
                                <tr>
                                    <th>MAF No</th>
                                    <th>Requested By</th>
                                    <th>Requested For</th>
                                    <th>Status</th>
                                    <th>Status Date</th>
                                    <th>Status Upadated By</th>
                                    <th>Status Remarks</th>
                                    <th>&nbsp;</th>

                                </tr>
                            </thead>
                            <tbody id="misafTableBody">
                                <!-- Filled via AJAX -->
                            </tbody>
                        </table>
                    </div>

                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>
    </div>
    <!-- end row -->
    <!-- End Content-->

</div>

<!-- Remarks -->
<div class="container shadow">
    <div class="modal fade" id="remarksModal" tabindex="-1" role="dialog" style="z-index: 999999; background: #f2f2f2 !important">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <!-- Added modal-dialog-centered -->
            <div class="modal-content">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <label for="remarks" class="form-label">Remarks</label>
                    <textarea id="remarks" class="form-control" cols="10"></textarea>
                    <input type="hidden" id="editIndex" value="-1" />
                    <input type="hidden" id="mafNo" />
                    <input type="hidden" id="recordId" />
                </div>
                <div class="modal-footer">
                    <button id="btnSaveRemarksApprover" onclick="SaveApprove(event)" type="button" class="btn btn-success">Save</button>
                    <button id="btnSaveRemarksEndorser" onclick="SaveEndorser(event)" type="button" class="btn btn-success">Save</button>
                    <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit & View Modal -->
<div class="container">
    <div class="modal fade" id="editViewModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editViewModalLabel"></h5>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="container">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="MAF_No">MAF No</label>
                                        <input type="text" id="MAF_No" value="" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Requested_By">Requested By</label>
                                        <input type="text" id="Requested_By" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Requested_For">Requested For</label>
                                        <input type="text" id="Requested_For" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-3" style="overflow-x:auto;">
                                    <!-- Request Table   -->
                                    <table class="table table-bordered table-centered" id="requestTableApprover">
                                        <thead>
                                            <tr>
                                                <th>Category</th>
                                                <th>Request / Problem Recommendation</th>
                                                <th>Status</th>
                                                <th>Status Date</th>
                                                <th>Remarks</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="requestTableBodyApprover">
                                        </tbody>
                                    </table>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <small class="text-info" id="warningEndorser"></small>
                                        <label for="Endorsed_By">Endorsed / Noted By (Optional)</label>
                                        @*<input type="text" id="Endorsed_By" class="form-control" />*@
                                        <select id="Endorsed_By" class="form-control select2"></select>
                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="DateTime_Endorsed">Status Date (Endorsed / Noted By)</label>
                                        <input type="date" id="DateTime_Endorsed" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Endorser_Remarks">Remarks (Endorsed / Noted By)</label>
                                        <input type="text" id="Endorser_Remarks" class="form-control" disabled />
                                    </div>

                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Final_Approver">Final Approver <span class="text-danger">(Required)</span></label>
                                        @*<input type="text" id="Final_Approver" class="form-control" />*@
                                        <select id="Final_Approver" class="form-control select2"></select>

                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="DateTime_Approved">Status Date (Final Approver)</label>
                                        <input type="date" id="DateTime_Approved" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Final_Approver_Remarks">Remarks (Final Approver)</label>
                                        <input type="text" id="Final_Approver_Remarks" class="form-control" disabled />
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Status">Status</label>
                                        <input type="text" id="Status" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <label for="Status_DateTime">Status Date</label>
                                        <input type="date" id="Status_DateTime" class="form-control" disabled />
                                    </div>
                                    <div class="col-md-4 col-sm-6 ">
                                        <div class="row">
                                            <div class="col-7">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" id="preApproved">
                                                    <label class="form-check-label" for="preApproved">
                                                        Pre-Approved ?
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-5">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" id="sendEmail">
                                                    <label class="form-check-label" for="sendEmail">
                                                        Send Email
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-2" style="overflow-x:auto;">
                                    <!-- Attachment Table   -->
                                    <table class="table table-bordered table-centered" id="attachmentTableApprover">
                                        <thead>
                                            <tr>
                                                <th>Attachment</th>
                                                <th></th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="attachmentTableBodyApprover">
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="editIndex" value="-1" />
                </div>
                <div class="modal-footer">
                    @*<button onclick="saveRequest()" type="button" class="btn btn-primary">Save</button>*@
                    <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Request-->
<div class="modal fade" id="requestModalEdit" tabindex="-1" role="dialog" style="background: #f2f2f2 !important">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="requestModalLabelEdit"></h5>
            </div>
            <div class="modal-body">
                <div class="row d-flex">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-2">
                        <label>Category</label>
                        <select id="category" class="form-control select2" autofocus></select>
                    </div>

                    <div class=" mb-2">
                        @Html.Label("Request / Problem Recommendation", new { @for = "reqProbRecom" })
                        @Html.TextArea("RequestProblemRecommendation", new { @class = "form-control", id = "reqProbRecom" })
                    </div>


                    @*<div class="col-lg-12 col-md-6 col-sm-4">
                            <div class="form-group mb-2">
                                <label>Reason</label>
                                <select id="reason" class="form-control select2" multiple></select>
                            </div>
                        </div>*@

                    <input type="hidden" id="editIndex" />
                </div>
            </div>
            <div class="modal-footer">
                <button id="saveButton" type="button" class="btn btn-primary">Save</button>
                <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" style="z-index: 999999; background: #f2f2f2 !important">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
                @*<button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" class="img-fluid" alt="Attachment Preview">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <style>
        .custom-toastr {
            z-index: 9999 !important;
        }
    </style>
}

@section scripts{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/index-misaf.js?nocache=@DateTime.Now.Ticks"></script>
}



