@model MISAF_Project.ViewModels.MisafViewModel

@{
    bool isNew = ViewBag.IsNew ?? false;
    var htmlAttributes = new Dictionary<string, object>
{
        { "class", "select2 form-control" },
        { "id", "statuses" }
    };
    if (isNew)
    {
        htmlAttributes.Add("disabled", "disabled");
    }
}


<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/misaf/index"><i class="uil-home-alt"></i>&nbsp;Home</a></li>
                    <li class="breadcrumb-item active">Create New</li>
                </ol>
            </div>
            <h4 class="page-title">MIS Action Form - <span class="text-primary">New</span></h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            @Html.AntiForgeryToken()
            <div class="card-body">
                <div class="row">
                    <div class="d-none">
                        <label class="form-label">MISAF Number</label><br>
                        <input type="text" id="txt_MISAFNUMBER" class="form-control" />
                    </div>
                    <div class="col-xl-4 col-md-4 col-sm-12 my-2">
                        @Html.Label("Date Requested")
                        <input type="date" id="DateRequested" value="@ViewBag.DateNow.ToString("yyyy-MM-dd")" class="form-control" disabled />
                    </div>
                    <div class="col-xl-4 col-md-4 col-sm-12 my-2">
                        @Html.Label("Requested By")
                        <input type="text" id="RequestedBy" value="@ViewBag.UserLogin" class="form-control" disabled />
                    </div>
                    <div class="col-xl-4 col-md-4 col-sm-12 my-2">
                        @Html.Label("Requested For")
                        <input type="text" id="RequestedFor" value="" class="form-control" />
                    </div>
                </div>

                <div class="row">

                    <!-- Request section -->
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-sm-5">
                                        <button id="btnAddRequest" type="button" class="btn btn-danger mb-2" data-toggle="modal" data-target="#requestModal"><i class="mdi mdi-plus-circle me-2"></i> Add Request</button>
                                    </div>
                                    <div class="col-sm-7">
                                        @*<div class="text-sm-end">
                                        <button type="button" class="btn btn-success mb-2 me-1"><i class="mdi mdi-cog-outline"></i></button>
                                        <button type="button" class="btn btn-light mb-2 me-1">Import</button>
                                        <button type="button" class="btn btn-light mb-2">Export</button>
                                    </div>*@
                                    </div>
                                </div>

                                <div class="table-responsive-sm mt-2">
                                    <table id="requestTable" class="table table-striped table-centered  mb-0">
                                        <thead>
                                            <tr>
                                                <th>Category</th>
                                                <th>Request / Problem Recommendation</th>
                                                <th>Reason</th>
                                                <th>Status</th>
                                                <th>Status Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="requestTableBody">
                                            <!-- Filled via AJAX -->
                                        </tbody>
                                    </table>
                                </div>

                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div>


                    <!-- Approver section -->
                    <section class="mt-3">
                        <h4>Approver Details</h4>
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        @Html.Label("Endorsed / Noted By (Optional)", new { @class = "form-label", @for = "EndorsedNotedBy" })
                                        <select id="endorser" class="form-control select2"></select>
                                    </div>
                                    @*<div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                    @Html.Label("Remarks (Endorsed / Noted By)", new { @class = "form-label", @for = "RemarksEndorsedNotedBy" })
                                    @Html.TextBox("RemarksEndorsedNotedBy", "", new { @class = "form-control", @id = "RemarksEndorsedNotedBy" })
                                </div>*@
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        @Html.Label("Status Date (Endorsed / Noted By)", new { @class = "form-label", @for = "StatusDateEndorsedNotedBy" })
                                        @Html.TextBox("StatusDateEndorsedNotedBy", "", new { @class = "form-control", @id = "StatusDateEndorsedNotedBy", type = "date", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        @Html.Label("Final Approver (Required)", new { @class = "form-label", @for = "FinalApprover" })
                                        <select id="approver" class="form-control select2"></select>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        @Html.Label("Status Date (Final Approver)", new { @class = "form-label", @for = "StatusDateFinalApprover" })
                                        @Html.TextBox("StatusDateFinalApprover", "", new { @class = "form-control", @id = "StatusDateFinalApprover", type = "date", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        @Html.Label("Status", new { @class = "form-label", @for = "Status" })
                                        @Html.DropDownList("Status", ViewBag.Statuses as SelectList, htmlAttributes)
                                    </div>

                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        @Html.Label("Status Date", new { @class = "form-label", @for = "StatusDate" })
                                        <input type="date" id="StatusDate" value="@ViewBag.DateNow.ToString("yyyy-MM-dd")" class="form-control" readonly />
                                    </div>
                                </div>

                                <div class="row mb-2 ml-2 mt-3">
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="preApproved">
                                            <label class="form-check-label" for="preApproved">
                                                Pre-Approved ?
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                        <div class="col-lg-4 col-md-4 col-sm-12 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="sendEmail" checked>
                                                <label class="form-check-label" for="sendEmail">
                                                    Send Email
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-5">
                                        <button id="btnAddAttachment" type="button" class="btn btn-danger mb-2 " data-toggle="modal" data-target="#attachmentModal"><i class="mdi mdi-plus-circle me-2"></i> Add Attachment</button>
                                    </div>
                                </div>

                                <div class="table-responsive-sm">
                                    <table id="attachmentTable" class="table table-striped table-centered  mb-0">
                                        <thead>
                                            <tr>
                                                <th>Attachment</th>
                                                <th></th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="attachmentTableBody">
                                            <!-- Filled via AJAX -->
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </div>

</div>

<div class="container my-5">
    <button type="button" class="btn btn-success" onclick="SaveMisaf(event)">Submit</button>
</div>

<!-- Modal Request-->
<div class="container">
    <div class="modal fade" id="requestModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="requestModalLabel"></h5>
                </div>
                <div class="modal-body">
                    <div class="row d-flex">

                        <div class="form-group mb-2">
                            <label>Category</label>
                            <select id="category" class="form-control select2" autofocus></select>
                        </div>

                        <div class=" mb-2">
                            @Html.Label("Request / Problem Recommendation", new { @for = "reqProbRecom" })
                            @Html.TextArea("RequestProblemRecommendation", new { @class = "form-control", id = "reqProbRecom" })
                        </div>


                        <div class="col-lg-12 col-md-6 col-sm-4">
                            <div class="form-group mb-2">
                                <label>Reason</label>
                                <select id="reason" class="form-control select2" multiple></select>
                            </div>
                        </div>

                        @*<div class="col-lg-12 col-md-12 col-sm-4">
                            <div class="form-group mb-2">
                                @Html.Label("Target Date", new { @for = "targetDate" })
                                @Html.TextBox("TargetDate", "", new { @class = "form-control", type = "date", id = "targetDate", min = DateTime.Now.ToString("yyyy-MM-dd") })
                            </div>
                        </div>*@

                        @*<div class="col-lg-12 col-md-6 col-sm-4">
                                <div class="form-group">
                                    @Html.Label("Remarks", new { @for = "remarks" })
                                    @Html.TextArea("Remarks", new { @class = "form-control", id = "remarks" })
                                </div>
                            </div>*@

                    </div>

                    <input type="hidden" id="editIndex" value="-1" />
                </div>
                <div class="modal-footer">
                    <button onclick="saveRequest()" type="button" class="btn btn-primary">Save</button>
                    <button id="btnClose" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Attachment-->
<div class="modal fade" id="attachmentModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="attachmentModalLabel"></h5>
            </div>
            <div class="modal-body">
                <div id="attachmentPreview"></div>
                <form id="uploadForm" enctype="multipart/form-data">
                    <div class="form-group mb-2">
                        <input type="file" id="attachment" name="file" class="form-control" />
                        <input type="hidden" id="editIndex" value="-1" />
                    </div>
                </form>
                <button type="button" onclick="saveAttachment()" class="btn btn-primary btn-md mx-auto">Upload</button>
                <input type="hidden" id="editIndex" value="-1" />
            </div>
        </div>
    </div>
</div>

<!-- Modal Image-->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Attachment Preview</h5>
                <button type="button" id="btnImageClose" class="close btn btn-sm btn-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <!-- Image will be injected here -->

            </div>
        </div>
    </div>
</div>

<!-- Modal Error -->
<div class="modal fade" id="validationModal" tabindex="-1" role="dialog" aria-labelledby="validationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="validationModalLabel">Validation Errors</h5>
                <button type="button" class="btn btn-secondary text-white" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-danger" id="validationErrors">
                @Html.AntiForgeryToken()
                <!-- Errors will be inserted here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="sendEmailButton">Send to MIS</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <style>
        .custom-toastr {
            z-index: 9999 !important;
        }
    </style>

}

@section scripts{
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/misaf.js?nocache=@DateTime.Now.Ticks"></script>
}


