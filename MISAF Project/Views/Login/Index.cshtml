@model MISAF_Project.Core.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;

}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login Form</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">
    <style>
        .field-validation-error{
            color: red;
            padding-top: 10px !important;
        }
    </style>
</head>

<body>
    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xxl-4 col-lg-5">
                        <div class="card">

                            <!-- Logo -->
                            <div class="card-header py-4 text-center bg-primary">
                                <a href="index.html">
                                    <span><img src="~/assets/images/logo.png" alt="logo" height="22"></span>
                                </a>
                            </div>

                            <div class="card-body p-4">

                                <div class="text-center w-75 m-auto">
                                    <h4 class="text-dark-50 text-center pb-0 fw-bold">Sign In</h4>
                                    <p class="text-muted mb-4">Enter your ID Number and Password to access MIS Action Form.</p>
                                    <br />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(temp => temp.ID_No, new { @for = "idNumber", @class="form-label" })
                                    @Html.TextBoxFor(temp => temp.ID_No, new { @class = "form-control", placeholder = "Enter ID No.", autocomplete = false, autofocus= "autofocus" })
                                    @Html.ValidationMessageFor(msg => msg.ID_No)
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(temp => temp.Birth_Date, new { @for = "password", @class="form-label" })
                                    @Html.TextBoxFor(temp => temp.Birth_Date, "{0:yyyy-MM-dd}", new { @class = "form-control", id = "password", type = "date", placeholder = "Enter ID No.", autocomplete = false })
                                    @Html.ValidationMessageFor(msg => msg.Birth_Date) 
                                    <br />
                                    <small>Note: Date of Birth, Format: Month/Day/Year</small>
                                </div>

                                <div class="mb-3 mb-0 text-center">
                                    <button class="btn btn-primary" type="submit"> Log In </button>
                                </div>

                            </div> <!-- end card-body -->
                        </div>
                        <!-- end card -->

                    </div> <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>

    }


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @{
        string version = typeof(System.Web.Configuration.WebApplicationLevel).Assembly.GetName().Version.ToString();
    }
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + version + "\"></script>", "~/bundles/bootstrap")

    @Scripts.Render("~/bundles/toastr")

    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>*@

<script>

</script>
</body>
</html>



